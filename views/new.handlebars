<div class="container py-5">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-xl-12 mx-auto">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title text-center"><i class="fa fa-plus" aria-hidden="true"></i> 新增餐廳</h4>
          <hr>
          <form action="/restaurants" method="POST">
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="name">餐廳名稱</label>
                <input type="text" class="form-control" name="name" placeholder="XXX 餐廳">
              </div>
              <div class="form-group col-md-4">
                <label for="name_en">英文餐廳名稱</label>
                <input type="text" class="form-control" name="name_en" placeholder="XXX Restaurant">
              </div>
              <div class="form-group col-md-4">
                <label for="category">餐廳類別</label>
                <select name="category" class="form-control">
                  <option selected>Choose...</option>
                  <option>美式料理</option>
                  <option>義式料理</option>
                  <option>台式料理</option>
                  <option>日式料理</option>
                  <option>東南亞料理</option>
                  <option>中東料理</option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <label for="image">餐廳圖片連結</label>
              <input type="url" class="form-control" name="image" placeholder="https://...">
            </div>
            <div class="form-group">
              <label for="location">地址</label>
              <input type="text" class="form-control" name="location" placeholder="台北市...">
            </div>
            <div class="form-group">
              <label for="phone">電話</label>
              <input type="text" class="form-control" name="phone" placeholder="02 2363 xxxx">
            </div>
            <div class="form-group">
              <label for="google_map">GoogleMap 連結</label>
              <input type="url" class="form-control" name="google_map" placeholder="https://...">
            </div>
            <div class="form-group">
              <label for="rating">評分</label>
              <input type="number" class="form-control" name="rating" placeholder="1-5分">
              <small id="ratingDescrip" class="form-text text-muted">評分請填1-5分</small>
            </div>
            <div class="form-group">
              <label for="description">餐廳介紹</label>
              <textarea class="form-control" name="description" rows="3"></textarea>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-danger">Submit</button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>