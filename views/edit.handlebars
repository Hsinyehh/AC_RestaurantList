<div class="container py-5">
  <div class="row">
    <div class="col-sm-12 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title text-center"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>編輯餐廳</h4>
          <hr>
          <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">

            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="name">餐廳名稱</label>
                <input type="text" class="form-control" name="name" placeholder="XXX 餐廳" value="{{ restaurant.name }}">
              </div>
              <div class=" form-group col-md-6">
                <label for="name_en">英文餐廳名稱</label>
                <input type="text" class="form-control" name="name_en" placeholder="XXX Restaurant"
                  value="{{ restaurant.name_en }}">
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="rating">評分</label>
                <input type="number" class="form-control" name="rating" step="0.1" min="0" max="5" placeholder="1-5分"
                  value="{{ restaurant.rating }}">
                <small id="ratingDescrip" class="form-text text-muted">評分請填1-5分</small>
              </div>
              <div class="form-group col-md-6">
                <label for="category">餐廳類型</label>
                <select name="category" class="form-control" value="{{ restaurant.category }}">
                  <option disabled>選擇餐廳類型</option>
                  <option value="美式料理" {{#if (eq restaurant.category "美式料理" )}}selected{{/if}}>美式料理</option>
                  <option value="義式料理" {{#if (eq restaurant.category "義式料理" )}}selected{{/if}}>義式料理</option>
                  <option value="台式料理" {{#if (eq restaurant.category "台式料理" )}}selected{{/if}}>台式料理</option>
                  <option value="日式料理" {{#if (eq restaurant.category "日式料理" )}}selected{{/if}}>日式料理</option>
                  <option value="東南亞料理" {{#if (eq restaurant.category "東南亞料理" )}}selected{{/if}}>東南亞料理</option>
                  <option value="中東料理" {{#if (eq restaurant.category "中東料理" )}}selected{{/if}}>中東料理</option>
                </select>
              </div>

            </div>

            <div class="form-group">
              <label for="image">餐廳圖片連結</label>
              <input type="url" class="form-control" name="image" placeholder="http://..."
                value="{{ restaurant.image }}">
            </div>
            <div class="form-group">
              <label for="location">地址</label>
              <input type="text" class="form-control" name="location" value="{{ restaurant.location }}">
            </div>
            <div class="form-group">
              <label for="phone">電話</label>
              <input type="text" class="form-control" name="phone" placeholder="02 2363xxxx" pattern="[1-9]{2}[0-9]{8}"
                value="{{ restaurant.phone }}">
            </div>
            <div class="form-group">
              <label for="google_map">GoogleMap 連結</label>
              <input type="url" class="form-control" name="google_map" placeholder="http://..."
                value="{{ restaurant.google_map }}">
            </div>

            <div class="form-group">
              <label for="description">餐廳介紹</label>
              <textarea class="form-control" name="description" rows="3"
                maxlength="250">{{restaurant.description}}</textarea>
              <small id="descriptHelp" class="form-text text-muted">字數上限250字</small>
            </div>
            <div class="text-center">
              <button type="submit" class="btn btn-danger">Save</button>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>